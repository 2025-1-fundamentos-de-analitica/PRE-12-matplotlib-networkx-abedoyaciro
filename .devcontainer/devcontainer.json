{
  "name": "Python Project with Specific Version",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.9-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && pip install -e .",
  "forwardPorts": [],
  "remoteUser": "vscode"
}
